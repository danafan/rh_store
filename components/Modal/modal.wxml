<!--components/Modal/modal.wxml-->
<view class="modal_box">
  <view class="edit_box">
    <view class="title">{{title}}</view>
    <view class="edit_content">
      <input class="edit_input" type="text" value="{{edit_value}}" bindinput="changeValue"></input>
    </view>
    <view class="bottom_box">
      <view class="but_item" bindtap="closeModal">取消</view>
      <view class="line"></view>
      <view class="but_item" bindtap="submitContent">确认</view>
    </view>
  </view>
</view>