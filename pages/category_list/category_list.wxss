/* pages/category_list/category_list.wxss */
.cate_item{
  background: #fff;
  border-bottom: 1rpx solid #f6f6f6;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cate_name{
  margin-bottom: 8rpx;
  font-size: 30rpx;
  color: #0b0d1d;
  font-weight: 700;
}
.toast{
  font-size: 24rpx;
  color: #ec722e;
}
.item_right{
  display: flex;
  align-items: center;
}
.but{
  margin-left: 20rpx;
  border: 1rpx solid #8a8a8a;
  border-radius: 24rpx;
  width: 100rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add_bank{
  margin: 30rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  height: 90rpx;
}
.add_icon{
  margin-right: 10rpx;
  width: 36rpx;
  height: 36rpx;
}
.add_text{
  font-size: 30rpx;
  color: #fff;
}
