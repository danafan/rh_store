/* pages/qualification/qualification.wxss */
page{
  background: #fff;
}
.upload_box{
  border-bottom: 1rpx solid #f6f6f6;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
}
.upload_title{
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #0b0d1d;
}
.img_box{
  border-radius: 8rpx;
  width: 338rpx;
  height: 260rpx;
  position: relative;
}
.card_img{
  border-radius: 8rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.close{
  border-radius: 0 8rpx 0 0;
  background: rgba(0, 0, 0, .6);
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.close_icon{
  width: 30rpx;
  height: 30rpx;
}

.submit {
  margin: 50rpx auto;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}