/* pages/announcement/announcement.wxss */
.announcement_item{
  border-bottom: 1rpx solid #f6f6f6;
  background: #fff;
  padding: 20rpx 15rpx;
}
.create_time{
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666666;
}
.content{
  font-size: 28rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.unread_content{
  color: #ec722e;
}
