/* pages/edit_commodity/edit_commodity.wxss */

.commodity_content {
  background: #fff;
}

.item_row {
  border-bottom: 1rpx solid #f6f6f6;
  padding: 30rpx 15rpx;
  display: flex;
}

.between {
  align-items: center;
  justify-content: space-between;
}

.label {
  width: 140rpx;
  font-size: 30rpx;
  color: #0b0d1d;
}

.card_label {
  width: 300rpx;
}

/* input框 */

.input_box {
  flex: 1;
  display: flex;
}

/* 价格 */

.price_box {
  flex: 1;
  display: flex;
}

.price_icon {
  width: 24rpx;
  color: #ec722e;
}

.price_input {
  color: #ec722e;
}

/* 图片 */

.img_box {
  flex: 1;
}

.img_list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

/* 选择图片组件 */

.upload_box {
  width: 182rpx;
  height: 140rpx;
  background: #F1F6F9;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload_icon {
  margin-bottom: 8rpx;
  width: 44rpx;
  height: 36rpx;
}

.upload_text {
  font-size: 24rpx;
  color: #8a8a8a;
}

/* 已上传的图片 */

.commodity_img_box {
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  width: 182rpx;
  height: 140rpx;
  border-radius: 5rpx;
  position: relative;
}

.commodity_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.tag {
  background: #ec722e;
  position: absolute;
  top: 0;
  right: 0;
  padding: 5rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
}

/* 灰色提示 */

.size_toast {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

/* 商品内容 */

.content_box {
  flex: 1;
}

.content_row {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.add_cate{
  border-radius: 25rpx;
  background: #ec722e;
  width: 130rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add_icon{
  margin-right: 5rpx;
  width: 30rpx;
  height: 30rpx;
}
.edit_but{
  font-size: 25rpx;
  color: #fff;
}
.margin_top{
  margin-top: 30rpx;
}
/* 套餐内容 */
.package_content{
  padding: 30rpx 15rpx 30rpx;
  background: #F1F6F9;
}

.item_top{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cate_input{
  flex: 1;
  font-size: 30rpx;
}
.cate_name{
  color: #0b0d1d;
  font-weight: 700;
}
.cate_name_input{
  color: #8a8a8a;
}
.delete_cate{
  width: 40rpx;
  height: 40rpx;
}
.menu_item{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #8a8a8a;
}
.item_left{
  display: flex;
  align-items: center;
  width: 65%;
}
.close_icon{
  background: #8a8a8a;
  margin-right: 15rpx;
  border-radius: 50%;
  width: 10rpx;
  height: 10rpx;
}
.menu_name{
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item_right{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.number_box{
  display: flex;
  align-items: center;
}
.icon{
  width: 38rpx;
  height: 38rpx;
}
.number_input{
  margin-left: 8rpx;
  margin-right: 8rpx;
  color: #333;
}
.add_menu{
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #ec722e;
}
.total_price{
  display: flex;
  align-items: center;
  justify-content: flex-end;
   color: #0b0d1d;
}
.total_box{
  font-size: 26rpx;
}
.current_price_box{
  display: table-cell;
  vertical-align: bottom;
}
.select_price_icon{
  font-size: 26rpx;
}
.current_price{
  font-size: 32rpx;
  font-weight: 700;
}
.sub_but {
  margin: 50rpx auto;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}
