/* pages/edit_commodity/edit_commodity.wxss */
.commodity_content{
  background: #fff;
}
.item_row{
  border-bottom: 1rpx solid #f6f6f6;
  padding: 30rpx 15rpx;
  display: flex;
}
.label{
  width: 140rpx;
  font-size: 30rpx;
  color: #0b0d1d;
}
/* input框 */
.input_box{
  flex: 1;
  display: flex;
}
/* 价格 */
.price_box{
  flex: 1;
  display: flex;
}
.price_icon{
  width: 30rpx;
  color: #ec722e;
}
/* 图片 */
.img_box{
  flex: 1;
}
.img_list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
/* 选择图片组件 */
.upload_box {
  border: 1rpx solid #e6e6e6;
  width: 182rpx;
  height: 140rpx;
  background: #f6f6f6;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.upload_icon{
  margin-bottom: 8rpx;
  width: 44rpx;
  height: 36rpx;
}
.upload_text{
  font-size: 24rpx;
  color: #8a8a8a;
}
/* 已上传的图片 */
.commodity_img_box{
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  width: 182rpx;
  height: 140rpx;
  border-radius: 5rpx;
  position: relative;
}
.commodity_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}
.tag{
  background: #ec722e;
  position: absolute;
  top: 0;
  right: 0;
  padding: 5rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
}
/* 灰色提示 */
.size_toast{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}
/* 黄色提示 */
.toast{
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #ec722e;
}

.sub_but{
  margin: 50rpx auto;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}