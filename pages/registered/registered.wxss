/* pages/registered/registered.wxss */

page {
  background: #fff;
}

.login_container {
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.login_title {
  margin-top: 118rpx;
  margin-bottom: 84rpx;
  font-weight: 700;
  font-size: 44rpx;
  color: #0b0d1d;
}

.input {
  border-radius: 8rpx;
  box-sizing: border-box;
  padding-left: 38rpx;
  padding-right: 38rpx;
  background: #f1f6f9;
  width: 658rpx;
  height: 92rpx;
  font-size: 32rpx;
}

.code_box {
  border-radius: 8rpx;
  background: #f1f6f9;
  margin-top: 26rpx;
  width: 658rpx;
  padding-right: 38rpx;
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.code_input {
  flex: 1;
}

.code_text {
  width: 200rpx;
  height: 92rpx;
  font-size: 26rpx;
  color: #ec722e;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.code_text_active {
  color: #666;
}

.login {
  margin: 50rpx auto;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}
