/* pages/commodity_detail.wxss */

page {
  background: #fff;
}

.item_row {
  border-bottom: 1rpx solid #f6f6f6;
  padding: 30rpx 15rpx;
  display: flex;
}

.label {
  width: 80rpx;
  font-size: 30rpx;
  color: #0b0d1d;
}

.input_box {
  flex: 1;
  display: flex;
}

/* 图片 */

.img_list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

/* 已上传的图片 */
.commodity_img_box {
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  width: 195rpx;
  height: 150rpx;
  border-radius: 5rpx;
  position: relative;
}

.commodity_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.tag {
  background: #ec722e;
  position: absolute;
  top: 0;
  right: 0;
  padding: 5rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
}

/* 价格 */
.price_box {
  flex: 1;
  display: flex;
}

.price_icon {
  width: 24rpx;
  color: #ec722e;
}

.price_input {
  color: #ec722e;
}


/* 套餐内容 */
.package_content {
  flex: 1;
  padding: 30rpx 15rpx;
  background: #F1F6F9;
}

.cate_name {
  color: #0b0d1d;
  font-weight: 700;
}
.margin_top{
  margin-top: 30rpx;
}
.menu_item {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #8a8a8a;
}

.item_left {
  display: flex;
  align-items: center;
  width: 65%;
}

.close_icon {
  background: #8a8a8a;
  margin-right: 15rpx;
  border-radius: 50%;
  width: 10rpx;
  height: 10rpx;
}

.menu_name {
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item_right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.number_input {
  color: #333;
}

.total_price {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #0b0d1d;
}

.total_box {
  font-size: 26rpx;
}

.current_price_box {
  display: table-cell;
  vertical-align: bottom;
}

.select_price_icon {
  font-size: 26rpx;
}

.current_price {
  font-size: 32rpx;
  font-weight: 700;
}

