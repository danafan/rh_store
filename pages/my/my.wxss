/* pages/my/my.wxss */

.top_back {
  background: #0b0d1d;
  width: 100%;
  height: 300rpx;
  display: flex;
  padding: 15rpx;
}

.store_img {
  margin-right: 20rpx;
  border-radius: 10rpx;
  width: 150rpx;
  height: 150rpx;
}

.store_name {
  margin-bottom: 20rpx;
  font-size: 36rpx;
  color: #d1b171;
  font-weight: 700;
}

.phone {
  font-size: 32rpx;
  color: #fff;
}

/* 下面内容 */

.content_box {
  width: 100%;
  padding-left: 15rpx;
  padding-right: 15rpx;
  position: relative;
  top: -90rpx;
}

.money_box {
  background-image: linear-gradient(to left, #e4d9bb, #f2eae0, #ebe3d0);
  border-radius: 10rpx;
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.money_box_list {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 260rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.balance_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.money_item {
  color: #333;
}

.item_label {
  font-size: 28rpx;
}

.item_val {
  font-size: 38rpx;
  font-weight: 700;
}

.cash_but {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 25rpx;
  width: 110rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333;
}

.yesterday_box {
  display: flex;
  align-items: center;
}

.margin_right {
  margin-right: 80rpx;
}

.money_val {
  font-size: 34rpx;
  font-weight: 700;
}

/* 工具 */

.toll_box {
  margin-top: 20rpx;
  border-radius: 10rpx;
  background: #fff;
  width: 100%;
  padding: 0 20rpx;
}

.toll_top {
  border-bottom: 1rpx solid #f6f6f6;
  width: 100%;
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #0b0d1d;
  font-weight: 700;
}
.bill{
  font-size: 26rpx;
  color: #8a8a8a;
}
.toll_list_box {
  padding-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.toll_item {
  margin-bottom: 36rpx;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item_icon {
  margin-bottom: 8rpx;
  width: 42rpx;
  height: 42rpx;
}

.item_label {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
}

.login_out{
  margin: 80rpx auto;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  border-radius: 45rpx;
  width: 80%;
  text-align: center;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 32rpx;
  color: #fff;
}