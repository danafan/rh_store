/* pages/edit_menu/edit_menu.wxss */

.item_row {
  background: #fff;
  border-bottom: 1rpx solid #f6f6f6;
  padding: 30rpx 15rpx;
  display: flex;
}

.label {
  width: 140rpx;
  font-size: 30rpx;
  color: #0b0d1d;
}

/* input框 */

.input_box {
  flex: 1;
  display: flex;
}

/* 价格 */

.price_box {
  flex: 1;
  display: flex;
}

.price_icon {
  width: 24rpx;
  color: #ec722e;
}

.price_input {
  color: #ec722e;
}

/* 图片 */

.img_box {
  flex: 1;
}

.img_list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

/* 选择图片组件 */

.upload_box {
  border: 1rpx solid #e6e6e6;
  width: 200rpx;
  height: 200rpx;
  background: #f6f6f6;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload_icon {
  margin-bottom: 8rpx;
  width: 44rpx;
  height: 36rpx;
}

.upload_text {
  font-size: 24rpx;
  color: #8a8a8a;
}

/* 已上传的图片 */

.commodity_img_box {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5rpx;
}

/* 灰色提示 */

.size_toast {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

.sub_but {
  margin: 50rpx auto;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
}
