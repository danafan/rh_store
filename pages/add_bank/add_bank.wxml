<!--pages/add_bank/add_bank.wxml-->
<view>
  <view class="item_row">
    <view class="label">真实姓名</view>
    <input class="input_box" type="text" value="{{real_name}}" data-type="real_name" placeholder="请输入真实姓名" bindinput="changeVal"></input>
  </view>
  <view class="item_row">
    <view class="label">身份证号</view>
    <input class="input_box" type="text" value="{{id_number}}" data-type="id_number" placeholder="请输入身份证号" bindinput="changeVal"></input>
  </view>
  <view class="item_row">
    <view class="label">银行卡号</view>
    <input class="input_box" type="number" value="{{bank_number}}" data-type="bank_number" placeholder="请输入银行卡号" bindinput="changeVal"></input>
  </view>
  <view class="item_row phone_item">
    <view class="phone_item_left">
      <view class="label">手机号</view>
      <input class="input_box" type="number" value="{{phone}}" data-type="phone" bindinput="changeVal" placeholder="请输入手机号" />
    </view>
    <view class="code_txt {{!notBut?'code_text_active':''}}" bindtap="getCode">{{codebutTxt}}</view>
  </view>
  <view class="item_row">
    <view class="label">验证码</view>
    <input class="input_box" type="number" value="{{code}}" data-type="code" placeholder="请输入验证码" bindinput="changeVal"></input>
  </view>
  <view class="button" bindtap="submitFun">提交</view>
</view>