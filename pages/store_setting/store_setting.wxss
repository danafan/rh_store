/* pages/store_setting/store_setting.wxss */
.store_content{
  margin-bottom: 20rpx;
  background: #fff;
  padding-left: 15rpx;
  padding-right: 15rpx;
}
.content_item{
  border-bottom: 1rpx solid #f6f6f6;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item_label{
  font-size: 30rpx;
  color: #0b0d1d;
}
.item_content{
  display: flex;
  align-items: center;
}
.val{
  font-size: 28rpx;
  color: #8a8a8a;
}
.business{
  color: #4CB96D;
}
.store_img{
  border-radius: 5rpx;
  width: 150rpx;
  height: 100rpx;
}
.right_icon{
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.modal_box{
  background: rgba(0, 0, 0, .6);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.edit_box{
  background: #fff;
  width: 580rpx;
  border-radius: 10rpx;
}
.title{
  border-bottom: 1rpx solid #f6f6f6;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #0b0d1d;
  font-weight: 700;
}
.toast{
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ec722e;
}
.edit_content{
  padding: 30rpx;
}
.edit_input{
  border:1rpx solid #f6f6f6;
  border-radius: 8rpx;
  height: 80rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.bottom_box{
  border-top: 1rpx solid #f6f6f6;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.but{
  width: 50%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #0b0d1d;
  font-weight: 700;
}
.line{
  height: 89rpx;
  width: 1rpx;
  background: #f6f6f6;
}